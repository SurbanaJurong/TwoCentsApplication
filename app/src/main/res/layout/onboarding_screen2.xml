<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.mrawesome.twocents.fragment.onboarding.OnboardingFragment2">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TwoCents"
        android:textSize="50dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/app_label"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.06999999"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/review_info"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:text="Let's review your info"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="350dp" />

    <RelativeLayout
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        app:layout_editor_absoluteY="200dp"
        android:id="@+id/review_username_wrapper"
        app:layout_constraintTop_toBottomOf="@+id/review_info"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/review_phoneNumber_wrapper">

        <TextView
            android:id="@+id/review_username_label"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:text="Username"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"/>

        <TextView
            android:id="@+id/review_username_field"
            android:layout_width="160dp"
            android:layout_height="25dp"
            android:textSize="25dp"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"/>

        <TextView
            android:id="@+id/review_username_message"
            android:layout_width="160dp"
            android:layout_height="15dp"
            android:layout_below="@id/review_username_label"
            android:layout_marginTop="5dp"
            android:text=""
            android:layout_alignStart="@id/review_username_field"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        app:layout_editor_absoluteY="500dp"
        android:id="@+id/review_nric_wrapper"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/review_postalCode_wrapper">

        <TextView
            android:id="@+id/review_nric_label"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:text="NRIC"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"/>

        <TextView
            android:id="@+id/review_nric_field"
            android:layout_width="160dp"
            android:layout_height="25dp"
            android:ems="10"
            android:textColor="@color/colorPrimary"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:text=""
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"/>

        <TextView
            android:id="@+id/review_nric_message"
            android:layout_width="160dp"
            android:layout_height="15dp"
            android:text=""
            android:layout_alignStart="@id/review_nric_field"
            android:layout_marginTop="5dp"
            android:layout_below="@id/review_nric_label"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/review_phoneNumber_wrapper"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_editor_absoluteY="300dp"
        app:layout_constraintBottom_toTopOf="@+id/review_year_wrapper"
        app:layout_constraintTop_toBottomOf="@+id/review_username_wrapper">

        <TextView
            android:id="@+id/review_phoneNumber_label"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:text="Phone Number" />

        <TextView
            android:id="@+id/review_phoneNumber_field"
            android:layout_width="160dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/review_phoneNumber_message"
            android:layout_width="160dp"
            android:layout_height="15dp"
            android:layout_alignStart="@id/review_phoneNumber_field"
            android:layout_below="@id/review_phoneNumber_label"
            android:layout_marginTop="5dp"
            android:text="" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/review_year_wrapper"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/review_postalCode_wrapper"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_editor_absoluteY="400dp"
        app:layout_constraintTop_toBottomOf="@+id/review_phoneNumber_wrapper">

        <TextView
            android:id="@+id/review_year_label"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:text="Year of Birth" />

        <TextView
            android:id="@+id/review_year_field"
            android:layout_width="160dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/review_year_message"
            android:layout_width="160dp"
            android:layout_height="15dp"
            android:layout_alignStart="@id/review_year_field"
            android:layout_below="@id/review_year_label"
            android:layout_marginTop="5dp"
            android:text="" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/review_postalCode_wrapper"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_editor_absoluteY="400dp"
        app:layout_constraintBottom_toTopOf="@+id/review_nric_wrapper"
        app:layout_constraintTop_toBottomOf="@+id/review_year_wrapper">

        <TextView
            android:id="@+id/review_postalCode_label"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:text="Postal Code" />

        <TextView
            android:id="@+id/review_postalCode_field"
            android:layout_width="160dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/review_postalCode_message"
            android:layout_width="160dp"
            android:layout_height="15dp"
            android:layout_alignStart="@id/review_postalCode_field"
            android:layout_below="@id/review_postalCode_label"
            android:layout_marginTop="5dp"
            android:text="" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
