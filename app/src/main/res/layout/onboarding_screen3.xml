<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TwoCents"
        android:textSize="50dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/app_label_2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.06999999"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/almost_there"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:text="Almost there..."
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="350dp" />

    <RelativeLayout
        android:id="@+id/review_phoneNumber_wrapper"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/review_year_wrapper"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_editor_absoluteY="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="219dp">

        <TextView
            android:id="@+id/review_phoneNumber_message"
            android:layout_width="290dp"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:textSize="10dp"
            android:text="Please enter the code sent toyour phone number" />

        <TextView
            android:id="@+id/review_phoneNumber_label"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:layout_alignStart="@id/review_phoneNumber_message"
            android:layout_below="@id/review_phoneNumber_message"
            android:text="Code" />

        <EditText
            android:id="@+id/review_phoneNumber_field"
            android:layout_width="160dp"
            android:layout_height="25dp"
            android:layout_alignTop="@id/review_phoneNumber_label"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>