<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:background="@color/cardview_light_background"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_item_wrapper"
        app:cardCornerRadius="7dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_avatar"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/user_avatar"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:id="@+id/event_item_event_name"
                    android:drawableStart="@drawable/ic_tag_text_outline_black_18dp"
                    android:drawablePadding="5dp"
                    android:text="event name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:id="@+id/event_item_host"
                    android:drawableStart="@drawable/ic_account_black_18dp"
                    android:drawablePadding="5dp"
                    android:text="host"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:id="@+id/event_item_venueId"
                    android:drawableStart="@drawable/ic_map_marker_black_18dp"
                    android:drawablePadding="5dp"
                    android:text="venue"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:id="@+id/event_item_time"
                    android:drawableStart="@drawable/ic_clock_black_18dp"
                    android:drawablePadding="5dp"
                    android:text="11 am - 12 am"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:id="@+id/event_item_is_recurring"
                    android:drawableStart="@drawable/ic_calendar_black_18dp"
                    android:drawablePadding="5dp"
                    android:text="every week"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:id="@+id/event_item_participant"
                    android:drawableStart="@drawable/ic_account_multiple_black_18dp"
                    android:drawablePadding="5dp"
                    android:text="16/20"/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>